[Unit]
Description=Home Assistant
Requires=docker.service
After=docker.service

[Service]
Restart=always
RestartSec=3
ExecStart=/usr/bin/docker-compose -f /var/lib/docker-compose/homeassistant.yml -p homeassistant up -d
ExecStop=/usr/bin/docker-compose -f /var/lib/docker-compose/homeassistant.yml -p homeassistant down
ExecStopPost=/usr/bin/docker-compose -f /var/lib/docker-compose/homeassistant.yml -p homeassistant rm

[Install]
WantedBy=multi-user.target
