[Unit]
Description=Traefik
Requires=docker.service
After=docker.service

[Service]
Restart=always
RestartSec=3
ExecStart=/usr/local/bin/docker-compose -f /var/lib/docker-compose/traefik.yml -p traefik up --no-color --no-build --abort-on-container-exit
ExecStop=/usr/local/bin/docker-compose -f /var/lib/docker-compose/traefik.yml -p traefik down
ExecStopPost=/usr/local/bin/docker-compose -f /var/lib/docker-compose/traefik.yml -p traefik rm

[Install]
WantedBy=multi-user.target
